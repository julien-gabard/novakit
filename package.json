{
  "name": "@julien-gabard/novakit",
  "version": "1.0.0",
  "author": "JulienGabard <juliengabard.pros@gmail.com>",
  "description": "Library components react, hooks and helpers",
  "license": "MIT",
  "keywords": [
    "React",
    "Hooks",
    "Helpers",
    "TypeScript"
  ],
  "scripts": {
    "format": "prettier --write --parser typescript '**/*.{ts,tsx}'",
    "lint": "eslint . --fix",
    "build": "tsc && vite build",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test-watch": "vitest",
    "test:ui": "vitest --ui",
    "start": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "type": "module",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/julien-gabard/novakit.git"
  },
  "bugs": {
    "url": "https://github.com/julien-gabard/novakit/issues"
  },
  "homepage": "https://novakit.netlify.app",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/@julien-gabard"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run format",
      "npm run lint",
      "npm run test"
    ]
  },
  "packageManager": "yarn@1.22.22",
  "resolutions": {
    "styled-components": "^6.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@storybook/addon-a11y": "^8.3.6",
    "@storybook/addon-essentials": "^8.3.6",
    "@storybook/addon-interactions": "^8.3.6",
    "@storybook/addon-links": "^8.3.6",
    "@storybook/blocks": "^8.3.6",
    "@storybook/manager-api": "^8.3.6",
    "@storybook/react": "^8.3.6",
    "@storybook/react-vite": "^8.3.6",
    "@storybook/testing-library": "^0.2.2",
    "@storybook/theming": "^8.3.6",
    "@testing-library/jest-dom": "^6.6.2",
    "@testing-library/react": "^16.0.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitest/coverage-istanbul": "^2.1.3",
    "@vitest/ui": "^2.1.3",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "storybook": "^8.3.6",
    "styled-components": "^6.1.13",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.11.0",
    "vite": "^5.4.10",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^2.1.3"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0",
    "styled-components": "^6.1.11"
  }
}
